@page "/mytabs"
@inject NavigationManager Navigation
@using BlazorAppForTabs.Services
@inject UserService UserService

<!-- Sticky Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="images/honeycomb2.jpg" alt="Logo" style="width: 40px; height: auto;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse w-100" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item px-4 text-center">
                    <a class="nav-link" href="/">חיפוש</a>
                </li>
                <li class="nav-item px-4">
                    <a class="nav-link text-center active" href="/mytabs">הטאבים שלי</a>
                </li>
                <li class="nav-item px-4">
                    <a class="nav-link text-center" href="/createtab">יצירת טאב</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (string.IsNullOrEmpty(UserService.UserName))
                {
                    <li class="nav-item">
                        <span class="nav-link">שלום, אורח</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signin">התחברות</a>
                    </li>

                }
                else
                {
                    <li class="nav-item">
                        <span class="nav-link text-center">שלום, @UserService.UserName</span>
                    </li>
                }
                
            </ul>
        </div>
    </div>
</nav>






<!-- Separator Line -->
<hr class="my-1" />

<!-- Main Content -->
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>הטאבים שלי</h2>
            </div>

            <ul class="nav nav-tabs" id="myTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="favorites-tab" data-bs-toggle="tab" data-bs-target="#favorites" type="button" role="tab" aria-controls="favorites" aria-selected="true">
                        מועדפים
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="submitted-tab" data-bs-toggle="tab" data-bs-target="#submitted" type="button" role="tab" aria-controls="submitted" aria-selected="false">
                        טאבים שהועלו
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content mt-3" id="myTabsContent">
                <!-- Favorites Section -->
                <div class="tab-pane fade show active" id="favorites" role="tabpanel" aria-labelledby="favorites-tab">
                    <div class="card">
                        <div class="card-body">
                            <h5>טאבים מועדפים</h5>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Master of Puppets - Metallica
                                    <span class="badge bg-success">קל</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Nothing Else Matters - Metallica
                                    <span class="badge bg-warning">בינוני</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Stairway to Heaven - Led Zeppelin
                                    <span class="badge bg-danger">קשה</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Submitted Tabs Section -->
                <div class="tab-pane fade" id="submitted" role="tabpanel" aria-labelledby="submitted-tab">
                    <div class="card">
                        <div class="card-body">
                            <h5>טאבים שהועלו</h5>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Fade to Black - Metallica
                                    <span class="badge bg-warning">בינוני</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    One - Metallica
                                    <span class="badge bg-danger">קשה</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

          </div>
    </div>
</div>
