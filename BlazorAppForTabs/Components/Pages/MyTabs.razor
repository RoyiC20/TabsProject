@page "/mytabs"

<!-- Sticky Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <div class="container">
        <a class="navbar-brand" href="#">TabNest</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Search</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/mytabs">My Tabs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/createtab">Create Tab</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/signin">Sign In</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Separator Line -->
<hr class="my-3" />

<!-- Main Content -->
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>My Tabs</h2>
            </div>

            <!-- Tabs for Favorites and Submitted -->
            <ul class="nav nav-tabs" id="myTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="favorites-tab" data-bs-toggle="tab" data-bs-target="#favorites" type="button" role="tab" aria-controls="favorites" aria-selected="true">
                        Favorites
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="submitted-tab" data-bs-toggle="tab" data-bs-target="#submitted" type="button" role="tab" aria-controls="submitted" aria-selected="false">
                        Submitted Tabs
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content mt-3" id="myTabsContent">
                <!-- Favorites Section -->
                <div class="tab-pane fade show active" id="favorites" role="tabpanel" aria-labelledby="favorites-tab">
                    <div class="card">
                        <div class="card-body">
                            <h5>Favorite Tabs</h5>
                            <ul class="list-group">
                                <!-- Static Example Items -->
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Master of Puppets - Metallica
                                    <span class="badge bg-success">Easy</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Nothing Else Matters - Metallica
                                    <span class="badge bg-warning">Medium</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Stairway to Heaven - Led Zeppelin
                                    <span class="badge bg-danger">Hard</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Submitted Tabs Section -->
                <div class="tab-pane fade" id="submitted" role="tabpanel" aria-labelledby="submitted-tab">
                    <div class="card">
                        <div class="card-body">
                            <h5>Submitted Tabs</h5>
                            <ul class="list-group">
                                <!-- Static Example Items -->
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Fade to Black - Metallica
                                    <span class="badge bg-warning">Medium</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    One - Metallica
                                    <span class="badge bg-danger">Hard</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
