@page "/createtab"

<!-- Sticky Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <div class="container">
        <a class="navbar-brand" href="#">TabNest</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">חיפוש</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/mytabs">הטאבים שלי</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/createtab">יצירת טאב</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/signin">התחברות</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Separator Line -->
<hr class="my-3" />

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>יצירת טאב חדש</h2>
    </div>

    <!-- Card Wrapper -->
    <div class="card shadow">
        <div class="card-body">
            <form>
                <!-- Title Input -->
                <div class="mb-3">
                    <label for="title" class="form-label">כותרת</label>
                    <input type="text" class="form-control" id="title" placeholder="הכנס את שם השיר" />
                </div>

                <!-- Artist Input -->
                <div class="mb-3">
                    <label for="artist" class="form-label">אמן</label>
                    <input type="text" class="form-control" id="artist" placeholder="הכנס את שם האמן" />
                </div>

                <!-- Optional YouTube Link Input -->
                <div class="mb-3">
                    <label for="youtubeLink" class="form-label">קישור למקור ביוטיוב</label>
                    <input type="text" class="form-control" id="youtubeLink" placeholder="הוסף קישור ליוטיוב (אופציונלי)" />
                </div>

                <!-- Info Text -->
                <p class="text-muted">
                    הטאב שלך יישאר פרטי עד שתבחר לשתף אותו בפומבי.
                </p>

                <!-- Buttons -->
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary me-2">ביטול</button>
                    <button type="button" class="btn btn-success">צור</button>
                </div>
            </form>
        </div>
    </div>
</div>
