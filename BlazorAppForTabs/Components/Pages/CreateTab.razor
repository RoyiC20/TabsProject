@page "/createtab"
@using BlazorAppForTabs.Services
@inject UserService UserService
@rendermode InteractiveServer

@inject NavigationManager Navigation






<!-- Separator Line -->
<hr class="my-1" />



<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>יצירת טאב חדש</h2>
    </div>

    <!-- Card Wrapper -->
    <div class="card shadow">
        <div class="card-body">
            <form>
                <!-- Title Input -->
                <div class="mb-3">
                    <label for="title" class="form-label">כותרת</label>
                    <input type="text" class="form-control" id="title" placeholder="הכנס את שם השיר" />
                </div>

                <!-- Artist Input -->
                <div class="mb-3">
                    <label for="artist" class="form-label">אמן</label>
                    <input type="text" class="form-control" id="artist" placeholder="הכנס את שם האמן" />
                </div>

                <!-- Optional YouTube Link Input -->
                <div class="mb-3">
                    <label for="youtubeLink" class="form-label">קישור למקור ביוטיוב</label>
                    <input type="text" class="form-control" id="youtubeLink" placeholder="הוסף קישור ליוטיוב (אופציונלי)" />
                </div>

                <!-- Info Text -->
                <p class="text-muted">
                    הטאב שלך יישאר פרטי עד שתבחר לשתף אותו בפומבי.
                </p>

                <!-- Buttons -->
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary me-2">ביטול</button>
                    <button type="button" class="btn btn-success">צור</button>
                </div>
            </form>
        </div>
    </div>
</div>
